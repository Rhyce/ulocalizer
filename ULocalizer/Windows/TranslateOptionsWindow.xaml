<controls:MetroWindow x:Class="ULocalizer.Windows.TranslateOptionsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:uControls="clr-namespace:ULocalizer.Controls"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" ShowIconOnTitleBar="False"
                      WindowCloseButtonStyle="{StaticResource WindowCloseButtonStyle}"
                      GlowBrush="{StaticResource AccentColorBrush}" TitlebarHeight="26"
                      Title="Translate options" Height="300" Width="300" ResizeMode="NoResize"
                      WindowStartupLocation="CenterOwner" Icon="/Images/icons/abc.ico"
                      NonActiveWindowTitleBrush="White"
                      SizeToContent="Height">
    <StackPanel Margin="10">
        <uControls:TranslateDirectionControl x:Name="DirectionsControl" />
        <Button Content="Translate" Name="TranslateBtn" Margin="0,10,0,0" Click="TranslateBtn_Click" />
    </StackPanel>
</controls:MetroWindow>